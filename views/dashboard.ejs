<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&display=swap" rel="stylesheet">
<link href="/css/dashboard.css" rel="stylesheet" type="text/css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<body>
  <div class="wrapper">
    <div class="container">
<nav class="navbar navbar-expand-lg ">
  <div class="container-fluid">
    <a class="navbar-brand" href="/dashbord">Dashboard</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item" id="noactive">
          <a class="nav-link" href="/Userdetails">Add User</a>
        </li>
      </ul>
      <li class="nav-item">
        <a class="nav-link"  href="/">LogOut</a>
      </li>
    </div>
  </div>
</nav>
<h1>User List</h1>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Gender</th>
      <th>Nationality</th>
    </tr>
  </thead>
  <tbody>
    <% items.forEach((item) => { %>
      <tr>
        <td><%= item.Username %></td>
        <td><%= item.FirstName %></td>
        <td><%= item.LastName %></td>
        <td><%= item.email %></td>
        <td><%= formatDate(item.Birthday) %></td>
        <td><%= item.Gender %></td>
        <td><%= item.Nationality %></td>
        <td><a href="/updateuser/<%=item.Username%>"><img src="../profile.png" alt="Update Icon"></a></td>
        <td><a href="/deleteuser/<%= item.Username %>"><img src="../delete.png" alt="Delete Icon"></a></td>
        <td><a href="/viewuser/<%= item.Username %>"><img src="../eye.png" alt="view Icon"></a></td>
      </tr>
    <% }); %>
  </tbody>
</table>
<br>
<div class="pages">
<% for(j=1; j<= totalPages; j++){
  %>
  <a href="?page=<%= j %>"><%= j %></a>
  <%
} %>
</div>
    </div>
  </div>
</body>
</html>